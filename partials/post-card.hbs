{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

{{#if featured}}
    {{!-- Skip rendering this post if it is featured --}}
{{else}}
<article class="post-card {{post_class}}">

    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 800px"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />
    </a>
    {{/if}}

    <div class="post-card-content">

        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <div class="post-card-header-container">
                    <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
                    {{#if primary_tag}}
                        {{#primary_tag}}
                        <div class="post-card-primary-tag">{{name}}</div>
                        {{/primary_tag}}
                    {{/if}}
                </div>
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            {{!-- <div class="post-card-excerpt">
                <p>{{excerpt}}</p>
            </div> --}}
        </a>

        <div class="post-card-readmore">
            <a href="{{url}}"><span>Read More</span>
            <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3.71789 12.0721L11.1818 4.60823" stroke="#7B2BF9" stroke-width="1.5" stroke-linecap="square"/>
                <path d="M11.6311 11.0759V4.00486H4.56004" stroke="#7B2BF9" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="bevel"/>
            </svg> 
            </a>
        </div>
    </div>{{!--/.post-card-content--}}

</article>
{{/if}}